@model AttendanceManagementSystem.Api.Models.EmployeeScheduleViewModel
@using AttendanceManagementSystem.Domain.Entities

@{
    ViewData["Title"] = "Управление графиками сотрудников";
}

<h2 class="mb-4 text-primary">🗓️ Управление графиками сотрудников</h2>
<p class="text-muted">Общие настройки графика для сотрудников .</p>

@if (!string.IsNullOrEmpty(Model.Message))
{
    var alertClass = Model.Message.StartsWith("✅") ? "alert-success" : "alert-danger";
    <div class="alert @alertClass mt-3">@Model.Message</div>
}

<form asp-action="ScheduleSetup" method="post">
    @Html.AntiForgeryToken()

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Schedules.First().FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Schedules.First().StartTime)</th>
                    <th>@Html.DisplayNameFor(m => m.Schedules.First().EndTime)</th>
                    <th>@Html.DisplayNameFor(m => m.Schedules.First().LimitInMinutes)</th>
                    <th>@Html.DisplayNameFor(m => m.Schedules.First().EmployementType)</th>
                </tr>
            </thead>
           
            <tbody>
                @for (int i = 0; i < Model.Schedules.Count; i++)
                {
                    <tr class="@(Model.Schedules[i].EmployeeScheduleId > 0 ? "table-success-light" : "table-warning-light")">

                        <td>
                            <strong class="text-nowrap">@Model.Schedules[i].FullName</strong>

                            <input type="hidden" asp-for="Schedules[@i].EmployeeId" />
                            <input type="hidden" asp-for="Schedules[@i].EmployeeScheduleId" />
                            <input type="hidden" asp-for="Schedules[@i].FullName" />
                        </td>

                        <td>
                            <input asp-for="Schedules[@i].StartTime" type="time" class="form-control" />
                            <span asp-validation-for="Schedules[@i].StartTime" class="text-danger small"></span>
                        </td>

                        <td>
                            <input asp-for="Schedules[@i].EndTime" type="time" class="form-control" />
                            <span asp-validation-for="Schedules[@i].EndTime" class="text-danger small"></span>
                        </td>

                        <td>
                            <input asp-for="Schedules[@i].LimitInMinutes"
                                   type="number"
                                   min="0"
                                   class="form-control form-control-sm" />
                            <span asp-validation-for="Schedules[@i].LimitInMinutes" class="text-danger small"></span>
                        </td>

                        <td>
                            <select asp-for="Schedules[@i].EmployementType"
                                    asp-items="Html.GetEnumSelectList<EmployementType>()"
                                    class="form-control">
                            </select>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-4 d-flex justify-content-end">
        <a asp-action="EmployeeList" class="btn btn-secondary me-2">Вернуться к списку</a>
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-save me-1"></i> Сохранить все графики
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
