@model AttendanceManagementSystem.Api.Models.SyncViewModel

@{
    // Установлен заголовок
    ViewData["Title"] = "Сохранение AttendanceLog в базу данных";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <hr />

    @* Блок для отображения сообщения о результате *@
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        // Определяем класс для алерта в зависимости от успешности операции
        var alertClass = Model.Message.StartsWith("✅") ? "alert-success" : "alert-danger";

        <div class="alert @alertClass">
            <strong>Результат:</strong> @Model.Message
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Загрузка логов TTLock в Базу Данных</h5>
            <p class="card-text">
                Нажмите кнопку ниже, чтобы начать синхронизацию. Система автоматически определит дату последнего записанного лога
                и запросит новые данные с этого момента.
            </p>

            <form asp-action="Index" method="post">
                
              
                
                <button type="submit" class="btn btn-primary mt-3">
                    <i class="fas fa-sync-alt"></i> Начать Синхронизацию
                </button>

            </form>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}