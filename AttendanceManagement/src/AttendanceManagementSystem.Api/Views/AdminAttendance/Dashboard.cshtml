@{
    ViewData["Title"] = "Админ-Панель Учета Посещаемости";
}

<div class="container mt-5">

    <h2 class="mb-3">@ViewData["Title"]</h2>
    <hr />

    <div class="row">

        <!-- Загрузка логов (Осн. действие) -->
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title text-primary">Загрузка Логов</h5>
                    <p class="card-text">Получить новые записи входов .</p>
                    <a asp-controller="AdminAttendance" asp-action="Index" class="btn btn-primary btn-block">
                        <i class="fas fa-sync-alt"></i> Загрузить Логи Входов
                    </a>
                </div>
            </div>
        </div>

        <!-- Сотрудники -->
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-sm border-success">
                <div class="card-body">
                    <h5 class="card-title text-success">Сотрудники</h5>
                    <p class="card-text">Активные сотрудники и их отчеты.</p>
                    <a asp-controller="AdminAttendance" asp-action="EmployeeList" class="btn btn-success btn-block">
                        <i class="fas fa-users"></i> Все Сотрудники 
                    </a>
                </div>
            </div>
        </div>
        <!-- Отчёт по опозданиям -->
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-sm border-danger">
                <div class="card-body">
                    <h5 class="card-title text-danger">Опоздания</h5>
                    <p class="card-text">Сводный отчет по задержкам за месяц.</p>
                    <a asp-controller="AdminAttendance" asp-action="LateArrivalsSummary" class="btn btn-danger btn-block">
                        <i class="fas fa-exclamation-triangle"></i> Открыть Отчет
                    </a>
                </div>
            </div>
        </div>


        <!-- Синхронизация персонала -->
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-sm border-warning">
                <div class="card-body">
                    <h5 class="card-title text-warning">Синхронизация</h5>
                    <p class="card-text">Обновить данные сотрудников.</p>
                    <a asp-controller="AdminAttendance" asp-action="EmployeeSync" class="btn btn-warning btn-block">
                        <i class="fas fa-rotate"></i> Обновить данные сотрудников
                    </a>
                </div>
            </div>
        </div>

        <!-- Рабочие графики -->
        <div class="col-md-4 mb-4">
            <div class="card text-center shadow-sm border-info">
                <div class="card-body">
                    <h5 class="card-title text-info">Графики</h5>
                    <p class="card-text">Настроить рабочее время и лимиты.</p>
                    <a asp-controller="AdminAttendance" asp-action="ScheduleSetup" class="btn btn-info btn-block">
                        <i class="fas fa-clock"></i> Открыть Графики
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>
