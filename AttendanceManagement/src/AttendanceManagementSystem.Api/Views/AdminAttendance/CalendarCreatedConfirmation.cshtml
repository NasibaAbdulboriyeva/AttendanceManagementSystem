@model AttendanceManagementSystem.Api.Models.CreationResultViewModel

@{
    ViewData["Title"] = "CalendarCreationResult";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-warning">

                <div class="card-header bg-warning text-dark text-center py-3">
                    <i class="fas fa-exclamation-triangle fa-3x mb-2"></i>

                 
                    <h2 class="card-title mb-0">Табель Уже Создан</h2>
                </div>

                <div class="card-body text-center">

                    @* Asosiy Xabar *@
                    <h4 class="text-warning mb-4">Операция по созданию табеля для этого месяца уже была выполнена!</h4>

                    @if (Model.CreationDate > DateTime.MinValue)
                    {
                        <p class="text-muted">
                            Последняя дата создания записи: <strong>@Model.CreationDate</strong>
                        </p>
                    }
                    else
                    {
                        <p class="text-muted">
                            Последняя дата создания записи: <span class="fw-bold">Неизвестна</span>
                        </p>
                    }

                    <hr class="my-4">


                    <div class="d-grid gap-2">

                        <a asp-controller="AdminAttendance"
                           asp-action="EmployeeList"
                           class="btn btn-warning text-dark btn-lg">
                            <i class="fas fa-list-alt me-2"></i> Просмотреть список сотрудников
                        </a>

                       

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>