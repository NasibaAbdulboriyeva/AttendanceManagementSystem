@model AttendanceManagementSystem.Api.Models.SyncViewModel 

@{
    ViewData["Title"] = "Синхронизация сотрудников с TTLock";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>
    <hr />

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        // succes  yashil rangda ko'rsatish
        var alertClass = Model.Message.StartsWith("✅") ? "alert-success" : "alert-danger";

        <div class="alert @alertClass">
            <strong>Natija:</strong> @Model.Message
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Обновление данных сотрудников TTLock</h5>
            <p class="card-text">
                С сервера TTLock будут загружены все записи IC-карт и отпечатков пальцев.
                Существующие в базе сотрудники будут обновлены, а отсутствующие — добавлены.
            </p>

            <form asp-action="EmployeeSync" method="post">

          
                <button type="submit" class="btn btn-success mt-3">
                    <i class="fas fa-user-plus"></i> Запустить синхронизацию сотрудников
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}