@model AttendanceManagementSystem.Application.DTOs.Auth.UserCreateDto

@{
    ViewData["Title"] = "Регистрация Пользователя";
}

<style>
    body {
        background: linear-gradient(135deg, #f0f4f8 0%, #d9e2ec 100%);
    }

    .signup-card {
        margin-top: 5vh;
        margin-bottom: 5vh; 
        border-radius: 1rem;
        border: none;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
    }

        .signup-card:hover {
            transform: translateY(-5px);
        }

    .card-header-custom {
        background-color: #4caf50;
        color: white;
        padding: 1.5rem 0;
        border-radius: 1rem 1rem 0 0;
        letter-spacing: 1px;
    }

    .form-control {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        padding: 0.75rem 1rem;
    }

    .btn-success-custom {
        background-color: #4caf50;
        border-color: #4caf50;
        border-radius: 0.5rem;
        padding: 0.75rem 0;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .btn-success-custom:hover {
            background-color: #388e3c;
            border-color: #388e3c;
        }

    .alert-danger {
        font-size: 0.9em;
        padding: 0.75rem;
        margin-bottom: 1.5rem;
        border-radius: 0.5rem;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card signup-card shadow-xl">
            <div class="card-header-custom text-center">
                <h3 class="mb-0">Создание нового аккаунта</h3>
            </div>
            <div class="card-body p-4 p-md-5">

                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <form asp-controller="Auth" asp-action="SignUp" method="post">

                    <h5 class="mb-4 text-secondary">Личная информация</h5>
                    <div class="row">
                        <div class="form-group mb-4 col-md-6">
                            <label asp-for="FirstName" class="form-label">Имя</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Введите ваше имя" />
                            <span asp-validation-for="FirstName" class="text-danger" style="font-size: 0.85em;"></span>
                        </div>

                        <div class="form-group mb-4 col-md-6">
                            <label asp-for="LastName" class="form-label">Фамилия</label>
                            <input asp-for="LastName" class="form-control" placeholder="Введите вашу фамилию" />
                            <span asp-validation-for="LastName" class="text-danger" style="font-size: 0.85em;"></span>
                        </div>
                    </div>

                    <h5 class="mb-4 text-secondary">Контактная информация</h5>

                    <div class="form-group mb-4">
                        <label asp-for="Email" class="form-label">Электронная почта (Email)</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="example@domain.com" />
                        <span asp-validation-for="Email" class="text-danger" style="font-size: 0.85em;"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="PhoneNumber" class="form-label">Номер телефона</label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="+998 XX YYY YY YY" />
                        <span asp-validation-for="PhoneNumber" class="text-danger" style="font-size: 0.85em;"></span>
                    </div>

                    <h5 class="mb-4 text-secondary">Данные для входа</h5>

                    <div class="form-group mb-4">
                        <label asp-for="UserName" class="form-label">Имя Пользователя</label>
                        <input asp-for="UserName" class="form-control" placeholder="Уникальное имя для входа" />
                        <span asp-validation-for="UserName" class="text-danger" style="font-size: 0.85em;"></span>
                    </div>

                    <div class="form-group mb-5">
                        <label asp-for="Password" class="form-label">Пароль</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Введите надежный пароль" />
                        <span asp-validation-for="Password" class="text-danger" style="font-size: 0.85em;"></span>
                    </div>

                    <button type="submit" class="btn btn-success-custom w-100">Зарегистрироваться</button>

                    <hr class="mt-4 mb-3" />
                    <p class="text-center text-muted">
                        Уже есть аккаунт? <a asp-controller="Auth" asp-action="Login" class="text-decoration-none" style="color: #4caf50; font-weight: 500;">Войти</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}